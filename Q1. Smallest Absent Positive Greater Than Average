class Solution {
public:
    int smallestAbsent(vector<int>& nums) {
        long long sum = accumulate(nums.begin(), nums.end(), 0);
        
        double avg = (double) sum/ nums.size();

        unordered_set<int> st(nums.begin(), nums.end());
        int a = (int)floor(avg) + 1;

        if(a <= 0){
            a = 1;
        }

        while(st.count(a)){
            a++;
        }

        return a;
    }
};
