class Solution {
public:
    string largestGoodInteger(string num) {
        int maxEle = 0;
        bool ok = false;
        for (int i = 0; i <= num.size() - 3; i++) {
            if (num[i] == num[i + 1] && num[i] == num[i + 2]) {
                int a = num[i] - '0';
                maxEle = max(a, maxEle);
                ok = true;
            }
        }
        if (ok) {
            return string(3, '0' + maxEle);
        }
        return "";
    }
};
