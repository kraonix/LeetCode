class Solution {
public:
    bool areOccurrencesEqual(string s) {
        unordered_map<char, int> freq;

        for(auto c : s){
            freq[c]++;
        }

        int ex = freq.begin()->second;

        for(auto i : freq){
            if(i.second != ex){
                return false;
            }
        }

        return true;
    }
};
