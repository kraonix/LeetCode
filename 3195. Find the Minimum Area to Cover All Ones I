class Solution {
public:
    int minimumArea(vector<vector<int>>& grid) {
        int n = grid.size();
        int m = grid[0].size();

        int top = n, left = m, bottom = -1, right = -1;

        for (int i = 0; i < n; i++) {
            for (int j = 0; j < m; j++) {
                if (grid[i][j] == 1) {
                    top = min(top, i);
                    left = min(left, j);
                    bottom = max(bottom, i);
                    right = max(right, j);
                }
            }
        }

        if (bottom == -1)
            return 0;

        return (bottom - top + 1) * (right - left + 1);
    }
};
