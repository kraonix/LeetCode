class Solution {
public:
    string restoreString(string s, vector<int>& indices) {
        map<int, string> m;

        for(auto i = 0; i < indices.size(); i++){
            m[indices[i]] = s[i];
        }

        string ans = "";
        for(auto i: m){
            ans += i.second;
        }

        return ans;
    }
};


class Solution {
public:
    string restoreString(string s, vector<int>& indices) {
        string word = s;
        for (int i = 0; i < s.size(); i++) {
            word[indices[i]] = s[i];
        }
        return word;
    }
};
