class Solution {
public:
    void funk(vector<int> &nums, int k, int i, vector<int> &ans, vector<vector<int>> &sol){
        if(ans.size() == k){
            sol.push_back({ans});
            return;
        }

        if(i == nums.size()){
            return;
        }

        ans.push_back(nums[i]);
        funk(nums, k, i+1, ans, sol);

        ans.pop_back();
        funk(nums, k, i+1, ans, sol);
    }

    vector<vector<int>> combine(int n, int k) {
        vector<int> nums;

        for(int i = 1; i <= n; i++){
            nums.push_back(i);
        }

        vector<int> ans;
        vector<vector<int>> sol;

        funk(nums, k, 0, ans, sol);
        return sol;
    }
};
