class Solution {
public:
    int pivotIndex(vector<int>& nums) {
        int a = 0;
        for (int i = 0; i < nums.size(); i++) {
            if (i > 0) {
                a += nums[i - 1];
            }

            int b = 0;

            for (int j = i + 1; j < nums.size(); j++) {
                b += nums[j];
            }

            if (a == b) {
                return i;
            }
        }
        return -1;
    }
};
