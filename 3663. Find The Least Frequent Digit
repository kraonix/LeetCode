class Solution {
public:
    int getLeastFrequentDigit(int n) {
        string s = to_string(n);

        unordered_map<char, int> m;

        for(auto i : s){
            m[i]++;
        }

        int ansDigit = 9;
        int minFreq = INT_MAX;

        for (auto &i : m) {
            int digit = i.first - '0';
            int freq = i.second;

            if (freq < minFreq || (freq == minFreq && digit < ansDigit)) {
                minFreq = freq;
                ansDigit = digit;
            }
        }

        return ansDigit;
    }
};
