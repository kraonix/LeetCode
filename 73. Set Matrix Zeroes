class Solution {
public:
    void setZeroes(vector<vector<int>>& matrix) {
        vector<pair<int, int>> zeros;
        int n = matrix.size();
        int m = matrix[0].size();

        for(int i = 0; i < matrix.size(); i++){
            for(int j = 0; j < matrix[i].size(); j++){
                if(matrix[i][j] == 0){
                    zeros.push_back({i, j});
                }
            }
        }


        for(int i = 0; i < zeros.size(); i++){
            int row = zeros[i].first;
            int col = zeros[i].second;

            for(int j = 0; j < n; j++){
                matrix[j][col] = 0;
            }

            for(int j = 0; j < m; j++){
                matrix[row][j] = 0;
            }
        }
    }
};
