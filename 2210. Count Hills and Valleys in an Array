class Solution {
public:
    int countHillValley(vector<int>& nums) {
        vector<int> temp;

        for (int i = 0; i < nums.size(); ++i) {
            if (i == 0 || nums[i] != nums[i - 1]) {
                temp.push_back(nums[i]);
            }
        }

        int count = 0;

        for (int i = 1; i < temp.size() - 1; i++) {
            int left = i - 1;
            int right = i + 1;
            if (temp[i] > temp[left] && temp[i] > temp[right]){
                count++;
            }else if(temp[i] < temp[left] && temp[i] < temp[right]){
                count++;
            }
        }
        return count;
    }
};
