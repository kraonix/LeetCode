class Solution {
public:
    int minElement(vector<int>& nums) {

        for (int i = 0; i < nums.size(); i++) {
            int n = nums[i];
            int sum = 0;
            while (n > 0) {
                sum = sum + n % 10;
                n /= 10;
            }
            nums[i] = sum;
        }

        int minElement = nums[0];
        for (int i = 0; i < nums.size(); i++) {
            minElement = min(minElement, nums[i]);
        }

        return minElement;
    }
};
