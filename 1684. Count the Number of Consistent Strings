class Solution {
public:
    int countConsistentStrings(string allowed, vector<string>& words) {
        int count = words.size();
        bool allowedLetters[26] = {};

        for (char c : allowed) {
            allowedLetters[c - 'a'] = true;
        }

        for (string word : words) {
            for (char c : word) {
                if (!allowedLetters[c - 'a']) {
                    count--;
                    break;
                }
            }
        }

        return count;
    }
};
