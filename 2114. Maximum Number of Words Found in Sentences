class Solution {
public:
    int mostWordsFound(vector<string>& sentences) {

        int ans = 0;
        for (int i = 0; i < sentences.size(); i++) {
            int count = 0;
            string s = sentences[i];
            for (int j = 0; j < s.size(); j++) {
                if (s[j] == ' ') {
                    count++;
                }
            }
            ans = max(ans, count + 1);
        }
        return ans;
    }
};
